extends layouts/_application

block vars
  - var bodyTemplate = "home"

block content
  header.splash
    .splash__container
      .splash__silhouette
        include ../assets/images/svg/silhouette.svg
  section.projects
    .projects__container
      .section-title
        .section-title__column
          h2 PROJECTS
      .projects__list
        each project in projects
          .projects__project.project
            a.project__image.lazyload(data-format=project.thumbSize data-src="assets/images/projects/#{project.abbr}-bg.jpg" href="#")
              img(src="assets/images/svg/logo-#{project.abbr}.svg")
            .project__copy
              h2!= project.name
                span!= project.type