include ../_modules/_Modules.jade
block vars
  - var bodyTemplate = "default"
  - var pageTitle = ""

doctype
html
  head
    title Taylor Ho portfolio#{pageTitle ? " - " + pageTitle : ""}
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src="assets/js/vendor/modernizr.js")
    link(type="text/css" rel="stylesheet" href="assets/css/app.css")
    include ../shared/_typekit
    //- include ../shared/_favicon
    //- include ../shared/_seo
    block additionalHead

  body(data-template="#{bodyTemplate}")
    include ../shared/_google-analytics
    main.main
      block content
    script(src="//npmcdn.com/flickity@1.2/dist/flickity.pkgd.min.js")
    script.
      window.Flickity || document.write('<script src="assets/js/vendor/flickity.pkgd.min.js">\x3C/script>')
    script(src="assets/js/app.js")